<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/doodle_green</item>
        <item name="colorPrimaryDark">@color/doodle_dark_green</item>
    </style>

    <!-- Main activity theme. -->
    <style name="DoodleTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.doodle.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.doodle.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>


    <!-- Style for doodle listview -->
    <style name="DoodleListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>
